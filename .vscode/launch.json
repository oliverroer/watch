    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/watch.exe",
            "args": [
                "-t",
                "--cmd",
                "-b",
                "-n",
                "1",
                //"-e",
                "type",
                "..\\hello.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "build",
            "symbolSearchPath": "${workspaceFolder}/bin"
        }
    ]
}