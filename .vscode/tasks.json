{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "./build.bat"
            },
            "problemMatcher": {
                "base": "$msCompile",
                "fileLocation": "relative"
            },
            "dependsOn": "clean"
        },
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "windows": {
                "command": "del",
                "args": [
                    "./bin/*"
                ]
            },
            "problemMatcher": []
        }
    ]
}